

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PointOfSaleLayout.cshtml";
}

<script src="~/AngularJS/angular.js"></script>
<script src="~/AngularJS/angular-local-storage.min.js"></script>
<script src="~/AngularJS/authInterceptorService.js"></script>
<script src="~/AngularJS/BankDetail.js"></script>
<div ng-app="bankDetailApp">
    <div class="row" ng-controller="bankDetailController">
        <div class="col-lg-12 mb-4">
            <div>
                <button type="button" disabled class="btn btn-sm btn-outline-primary mb-1">Bank Detail List</button>
                <button type="button" ng-click="AddNew();" class="btn btn-sm btn-outline-primary mb-1">Add New</button>
            </div>
            <!-- Simple Tables -->
            <div class="card">

                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Bank</th>
                                <th>Account No</th>
                                <th>Account Type</th>
                                <th>Account For</th>
                                <th>Account User</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="bankDetail in BankDetailList">
                                <td>{{bankDetail.BankName}}</td>
                                <td>{{bankDetail.BankAccountNo}}</td>
                                <td>{{bankDetail.BankAccountType}}</td>
                                <td>{{bankDetail.AccountFor}}</td>
                                <td ng-if="bankDetail.CustomerId != 0">{{bankDetail.CustomerName}}</td>
                                <td ng-if="bankDetail.CompanyId != 0">{{bankDetail.Company}}</td>
                                <td ng-if="bankDetail.Status == true">Yes</td>
                                <td ng-if="bankDetail.Status == false">No</td>

                                <td>
                                    <button type="button" ng-click="Edit(bankDetail);" class="btn btn-sm btn-outline-primary mb-1">Edit</button>
                                    <button type="button" ng-click="Delete(bankDetail);" class="btn btn-sm btn-outline-danger mb-1">Delete</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>