
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PointOfSaleLayout.cshtml";
}
<script src="~/AngularJS/angular.js"></script>
<script src="~/AngularJS/angular-local-storage.min.js"></script>
<script src="~/AngularJS/authInterceptorService.js"></script>
<script src="~/AngularJS/Supplier.js"></script>
<div ng-app="supplierApp">
    <div class="row" ng-controller="supplierController">
        <div class="col-lg-12 mb-3">
            <div>
                <button type="button" disabled class="btn btn-sm btn-outline-primary mb-1">Supplier List</button>
                <button type="button" ng-click="AddNew();" class="btn btn-sm btn-outline-primary mb-1">Add New</button>
            </div>
             <!-- Simple Tables -->
            <div class="card">

                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Company</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="supplier in SupplierList">
                                <td>{{supplier.SupplierName}}</td>
                                <td>{{supplier.ContactNo}}</td>
                                <td>{{supplier.Company}}</td>
                                <td>{{supplier.CompanyAddress}}</td>
                                <td ng-if="supplier.Status == true">Yes</td>
                                <td ng-if="supplier.Status == false">No</td>

                                <td>
                                    <button type="button" ng-click="Edit(supplier);" class="btn btn-sm btn-outline-primary mb-1">Edit</button>
                                    <button type="button" ng-click="Delete(supplier);" class="btn btn-sm btn-outline-danger mb-1">Delete</button>

                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>