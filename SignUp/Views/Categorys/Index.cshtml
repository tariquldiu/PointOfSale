

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PointOfSaleLayout.cshtml";
}

<script src="~/AngularJS/angular.js"></script>
<script src="~/AngularJS/angular-local-storage.min.js"></script>
<script src="~/AngularJS/authInterceptorService.js"></script>
<script src="~/AngularJS/Category.js"></script>
<div ng-app="categoryApp">
    <div class="row" ng-controller="categoryController">
        <div class="col-lg-12 mb-4">
            <div>
                <button type="button" disabled class="btn btn-sm btn-outline-primary mb-1">Category List</button>
                <button type="button" ng-click="AddNew();" class="btn btn-sm btn-outline-primary mb-1">Add New</button>
            </div>
            <!-- Simple Tables -->
            <div class="card">

                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Unit</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="category in CategoryList">
                                <td>{{category.CategoryName}}</td>
                                <td>{{category.CategoryType}}</td>
                                <td>{{category.Unit}}</td>
                                <td>{{category.Status}}</td>

                                <td>
                                    <button type="button" ng-click="Edit(category);" class="btn btn-sm btn-outline-primary mb-1">Edit</button>
                                    <button type="button" ng-click="Delete(category);" class="btn btn-sm btn-outline-danger mb-1">Delete</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>